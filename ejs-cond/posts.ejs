<html>
    <%- include('./partials/head.ejs') %>
<body>
    <form > 
     <%- include('./partials/nav.ejs') %>
     <h1>Posts:</h1>
     <ul>
        <% if (posts.length) { %>
            <% posts.forEach(({ id, title, date, text, author }) => { %>
                <li>
                    <article>
                        <h1>
                            <a href="/posts/<%= id %>"><%= title %></a>
                        </h1>
                            <p><%= text %></p>
                        <div class="info">
                            <span><%= date %></span>
                            <span><%= author %></span>
                        </div>
                    </article>
                </li>
            <% }) %>
        <% } %>    
    </ul>
    
</form>
</body>


</html>
